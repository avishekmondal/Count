<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/llResultContainer"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/list_item_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TYPE"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:background="@drawable/list_item_border"
                android:gravity="center"
                android:layout_weight="1.2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="RACK#"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_weight="1.2"
                android:gravity="center"
                android:background="@drawable/list_item_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="COUNT"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:background="@drawable/list_item_border"
                android:gravity="center"
                android:layout_weight="1.25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DELETE"/>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/lvCountResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/pwResultSubmit"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_gravity="center"
        app:matProg_barColor="#0FAA83"
        app:matProg_spinSpeed="1.5"
        app:matProg_progressIndeterminate="true"
        android:visibility="gone"/>



    <LinearLayout
        android:id="@+id/llSubmitContainer"
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llAddCount"
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/button_shadow_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD MORE"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSubmitCount"
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/button_shadow_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
